= form_for @quest do |f|
  - if @quest.errors.any?
    #error_explanation
      %h2
        = pluralize(@quest.errors.count, "error")
        prohibited
        this question from being saved:
      %ul
        - @quest.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :Title
    %br/
    = f.text_field :title
  %p
    = f.label :Body
    %br/
    = f.text_area :body
  %p
    = f.submit :class => "btn btn-primary"
